extends ../app

block variables
	-
		const pageTitle = 'Регистрация';

block content
	.Auth
		.container
			.content.col-lg-5
				.form-group
					label(for='name') Имя *
					input#name.form-control(type='text' placeholder='Имя *')
				
				.form-group
					label(for='surname') Фамилия *
					input#surname.form-control(type='text' placeholder='Фамилия *')

				hr

				.form-group
					label(for='login') Логин
					input#login.form-control(type='text' placeholder='Логин')
					
				.form-group
					label(for='password') Пароль
					input#password.form-control(type='password' placeholder='Пароль')
				
				button.btn.btn-success.btn-send Зарегистрироваться
